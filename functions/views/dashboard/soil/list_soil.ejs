                <td style="text-align: center;"><%= soils[i].water_holding_capacity %></td>
                <td style="text-align: center;"><%= soils[i].water_allowance %></td>
                <td style="text-align: center;"><%= soils[i].created_at %></td>

                <td style="text-align: center;"><button class="btn btn-sm btn-warning" onclick="post2soil('soil/edit/<%= soils[i].id %>',{});" href="#">แก้ไข</button>
