                  <script>
                  function editSoil(id, title, title2, water_holding_capacity, water_allowance)
                  {
                    $('input#edit-soil-id').val(id);
                    $('input#edit-soil-title').val(title);
                    $('input#edit-soil-title2').val(title2);
                    $('input#edit-soil-water-holding-capacity').val(water_holding_capacity);
